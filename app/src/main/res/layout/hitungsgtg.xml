<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper">

    <TextView
        android:id="@+id/txtJudulsgtg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt1sgtg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtJudulsgtg" />

    <EditText
        android:id="@+id/inpt2sgtg"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="number"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/txt2sgtg"
        app:layout_constraintTop_toBottomOf="@+id/txt2sgtg" />

    <EditText
        android:id="@+id/inpt1sgtg"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="number"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/txt1sgtg"
        app:layout_constraintTop_toBottomOf="@+id/txt1sgtg" />

    <Button
        android:id="@+id/btnHslsgtg"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:background="@drawable/roundbtn1"
        android:fontFamily="@font/poppins_medium"
        android:text="Hitung"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/inpt3sgtg"
        app:layout_constraintTop_toBottomOf="@+id/inpt3sgtg" />

    <TextView
        android:id="@+id/txt2sgtg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/txt1sgtg"
        app:layout_constraintTop_toBottomOf="@+id/inpt1sgtg" />

    <TextView
        android:id="@+id/txt3sgtg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/inpt2sgtg"
        app:layout_constraintTop_toBottomOf="@+id/inpt2sgtg" />

    <EditText
        android:id="@+id/inpt3sgtg"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/txt3sgtg"
        app:layout_constraintTop_toBottomOf="@+id/txt3sgtg" />

</androidx.constraintlayout.widget.ConstraintLayout>